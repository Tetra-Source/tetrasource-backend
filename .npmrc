FROM node:18-alpine

WORKDIR /app

# Copy only essential package files
COPY package.json package-lock.json ./

# Install production dependencies only (saves space & time)
RUN npm ci --only=production

# Copy application code
COPY . .

# Expose port
EXPOSE 3000

# Set environment
ENV NODE_ENV=production
ENV PORT=3000

# Start the application directly (more reliable than npm start)
CMD ["node", "index.js"]
# OR: CMD ["node", "server.js"]
# OR: CMD ["node", "src/index.js"]
